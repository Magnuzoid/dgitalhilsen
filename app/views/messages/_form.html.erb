<%= form_for @message, :action => :save,
                       :remote => :true,
                       :method => :post do |f| %>
  <div class="label">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <%= render 'canvas' %>
  <%= f.text_field :msg, class: "hide"%>
  <%= f.submit "Create", class: "message-submit" %>
<% end %>
<%= render 'painttools' %>
