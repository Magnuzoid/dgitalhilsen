<%= form_for @message, :action => :save,
                       :remote => :true,
                       :method => :post do |f| %>
  <div class="label">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <%= f.text_field :msg%>
  <%= f.submit "Create", class: "message-submit" %>
<% end %>
